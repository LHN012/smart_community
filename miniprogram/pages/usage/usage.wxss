/* pages/usage/usage.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 房屋选择器样式 */
.house-selector {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.house-list {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.house-item {
  flex: 0 0 auto;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}

.house-item.active {
  background: #e8f7e8;
  border-color: #07c160;
}

.house-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.house-address {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 20rpx 0;
}

.tab.active {
  color: #007AFF;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 2rpx;
}

/* 实时用量卡片样式 */
.realtime-cards {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx 20rpx;
}

.realtime-card {
  flex: 1;
  min-width: 300rpx;
  margin: 10rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.card-value {
  font-size: 36rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.card-time {
  font-size: 24rpx;
  color: #999;
}

/* 图表容器样式 */
.chart-container {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 历史用量样式 */
.historical-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.search-bar {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.picker {
  flex: 1;
  padding: 12rpx 16rpx;
  background: #f8f8f8;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #333;
}

.button-group {
  display: flex;
  gap: 8rpx;
}

.btn-query, .btn-reset {
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin: 0;
  padding: 0;
  text-align: center;
}

.btn-query {
  background: #07c160;
  color: #fff;
}

.btn-reset {
  background: #f8f8f8;
  color: #666;
}

.history-list {
  margin-top: 20rpx;
}

.history-item {
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.type {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.item-content {
  font-size: 26rpx;
  color: #666;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 内容区域样式 */
.content {
  padding: 20rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 用量列表样式 */
.usage-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.usage-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.usage-item .label {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.usage-item .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 0 10rpx;
}

.usage-item .unit {
  font-size: 24rpx;
  color: #999;
}

/* 月份选择器样式 */
.month-picker {
  margin-bottom: 30rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-content .icon-arrow-down {
  font-size: 24rpx;
  color: #999;
} 