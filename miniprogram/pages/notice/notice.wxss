/* pages/notice/notice.wxss */
.container {
  padding: 20rpx;
}

.type-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.time-filter {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}

.filter-item {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background: #f5f5f5;
}

.filter-item.active {
  background: #007AFF;
  color: white;
}

.read-all-btn {
  width: fit-content;
  padding: 10rpx 30rpx;
  background: #007AFF;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.notice-list {
  margin-top: 20rpx;
}

.notice-item {
  padding: 20rpx;
  background: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  position: relative;
}

.notice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.notice-title {
  font-size: 32rpx;
  font-weight: 500;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  background: #FF3B30;
  border-radius: 50%;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

/* 通知类型颜色 */
.notice-item.urgent {
  border-left: 8rpx solid #FF3B30;
}

.notice-item.normal {
  border-left: 8rpx solid #007AFF;
}

.notice-item.activity {
  border-left: 8rpx solid #34C759;
}

.notice-item.maintenance {
  border-left: 8rpx solid #FF9500;
}

.notice-item.payment {
  border-left: 8rpx solid #5856D6;
}

/* 通知详情弹窗 */
.notice-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.detail-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}

.detail-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.empty-notice {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
} 