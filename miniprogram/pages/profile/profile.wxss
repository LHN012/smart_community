.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-info {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.wx-binding {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.binding-status {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.bound {
  color: #07C160;
  margin-left: 10rpx;
}

.unbound {
  color: #ff4d4f;
  margin-left: 10rpx;
}

.bind-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #07C160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.bound-info {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
}

.menu-list {
  background: #fff;
  border-radius: 12rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.bind-btn.bound {
  color: #999;
  border-color: #999;
  background: #f5f5f5;
} 