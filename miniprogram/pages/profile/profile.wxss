.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.profile-header {
  background-color: #07C160;
  padding: 40rpx 30rpx;
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.profile-content {
  padding: 20rpx;
  margin-top: -30rpx;
}

.section-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #07C160;
}

.info-list {
  padding: 10rpx 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  color: #666;
  font-size: 28rpx;
}

.info-item .value {
  color: #333;
  font-size: 28rpx;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

.role-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.role-user {
  background-color: #e6f7ff;
  color: #1890ff;
}

.role-admin {
  background-color: #f6ffed;
  color: #52c41a;
}

.role-super-admin {
  background-color: #fff2e8;
  color: #fa8c16;
}

.wx-binding {
  padding: 10rpx 0;
}

.binding-status {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.bound {
  color: #07C160;
  margin-left: 10rpx;
}

.unbound {
  color: #ff4d4f;
  margin-left: 10rpx;
}

.bind-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #07C160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.bound-info {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
}

.logout-btn {
  width: 100%;
  background-color: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.logout-btn:active {
  opacity: 0.8;
}

.menu-list {
  background: #fff;
  border-radius: 12rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.bind-btn.bound {
  color: #999;
  border-color: #999;
  background: #f5f5f5;
} 