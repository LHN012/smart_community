.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

.balance {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  padding: 30rpx 0;
}

.input-group {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.currency {
  font-size: 36rpx;
  color: #333;
  margin-right: 20rpx;
}

.input-group input {
  flex: 1;
  font-size: 36rpx;
}

.recharge-btn {
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.payment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.payment-options {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.payment-option {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.payment-option image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.payment-option text {
  font-size: 28rpx;
  color: #333;
}

.modal-close {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
} 