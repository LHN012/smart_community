<view class="container">
  <view class="login-box">
    <view class="title">智慧社区</view>
    <view class="input-group">
      <input class="input" type="text" placeholder="用户名" model:value="{{username}}" />
      <input class="input" type="password" placeholder="密码" model:value="{{password}}" />
    </view>
    <button class="login-btn" bindtap="handleLogin" loading="{{loading}}">登录</button>
    <button class="wechat-btn" bindtap="handleWechatLogin" loading="{{loading}}">
      <image class="wechat-icon" src="http://localhost:8080/images/wechat.svg" mode="aspectFit"></image>
      微信一键登录
    </button>
  </view>
</view> 