/* pages/payment/payment.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
}

/* 筛选区域样式 */
.filter-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.filter-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.query-btn, .reset-btn {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.query-btn {
  background-color: #07c160;
  color: #fff;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

/* 记录列表样式 */
.record-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.record-item {
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.status {
  font-size: 28rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.status.success {
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
}

.status.failed {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
}

.status.pending {
  color: #faad14;
  background-color: rgba(250, 173, 20, 0.1);
}

.record-content {
  font-size: 28rpx;
}

.record-content > view {
  margin-bottom: 10rpx;
}

.record-content > view:last-child {
  margin-bottom: 0;
}

.record-content .label {
  color: #666;
  width: auto;
  margin-right: 10rpx;
}

.record-content .value {
  color: #333;
}

/* 无数据提示样式 */
.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
} 