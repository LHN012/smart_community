.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 30rpx;
  background-color: #07c160;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.welcome {
  color: #fff;
  font-size: 36rpx;
  text-align: center;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.grid-item {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.grid-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.grid-item text {
  font-size: 28rpx;
  color: #333;
} 